<!DOCTYPE html>
<html ng-app="BusinessRegistrySearchApp" ng-controller="LandingPageController">
<head>
    <title ng-bind="companyName"></title>
</head>
<body>

    <script data-require="angular.js" data-semver="1.3.0-beta.5" src="//code.angularjs.org/1.3.0-beta.5/angular.min.js"></script>
    @Scripts.Render("~/bundles/BusinessRegistrySearchApp")

    {{ error }}
    <form name="searchCompany" ng-submit="search(companyName)">
        <input type="search" required placeholder="Company name to find" ng-model="companyName"/>
        <input type="submit" value="Search"/>
    </form>
    
    <div ng-repeat="company in companies">
        <div>CompanyName: </div><h1>{{ company.CompanyName }}</h1>
        <div>CompanyId: {{ company.CompanyId }}</div>
        <div>Address: {{ company.Address }}</div>
        <div>ICO: {{ company.ICO }}</div>
        </br>
    </div>

</body>
</html>